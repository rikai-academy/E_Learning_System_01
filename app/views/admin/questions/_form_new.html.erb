<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newQuestion" data-whatever="@getbootstrap"><%= t("admin.questions.new")%></button>
<div class="modal fade" id="newQuestion" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><h3><%= t("admin.questions.new")%></h3></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(model: [:admin, @question], local: true) do |q|%>
          <div class="form-group">
            <%= q.label :content, value: t("admin.questions.ques"), class: "col-form-label" %><br> 
            <%= q.text_field :content, class: "form-control"%>
          </div>
          <div class="form-group">
            <%= q.label :lesson_id, value: t("admin.content_lessons.lesson"), class: "col-form-label"%><br>
            <%= q.text_field :lesson_name, value: @lesson.name_lesson, class: "form-control"%>
          </div>
          <div class="modal-footer">
            <%= q.submit  t("admin.content_lessons.add"), class: "btn btn-primary" %>
          </div>
        <%end%>
      </div>
      
    </div>
  </div>
</div>