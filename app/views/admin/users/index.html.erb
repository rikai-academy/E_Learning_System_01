<%= render "admin/sidebar_admin" %>

<div class = "col-md-8">
  <div class = "row">
    <%= render "shared/flash_messages" %>
  </div>
  <div class = "col-md-6 col-md-offset-7">
    <%= form_with( url: admin_users_path,method: :get, class: "form-inline md-form mr-auto mb-4") do |f| %>
        <%= f.text_field :name, class: "form-control mr-sm-2"%>
        <%= f.submit "Search", class: "btn aqua-gradient btn-rounded btn-sm my-0"%>
    <%end%>
  </div>
  <table class="table table-striped table-inverse table-responsive table-bordered table-hover">
      <thead class="thead-inverse">
        <tr>
          <th>STT</th>
          <th><%= t("admin.users.username")%></th>
          <th><%= t("admin.users.email")%></th>
          <th><%= t("admin.users.status")%></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |u| %>
          <% if u.email != "firesoul0608@gmail.com"%>
            <tr>
              <td ><%= u.id - 1%></td>
              <td scope="row"><%= link_to u.username, admin_user_path(id: u.id) %></td>
              <td ><%= u.email%></td>
              <td><% if u.status%>
                    <div class ="active_status"></div>
                  <%else%>
                    <div class ="unactive_status"></div>
                  <%end%>
              <td>
                <%= link_to edit_admin_user_path(id: u.id), class: "btn btn-primary m-1" do %> 
                  <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                <%end%>
                <% if u.status %>
                    <%= link_to [:admin, u], method: :delete, class: "btn btn-primary m-1" do %>
                      <i class="fa fa-circle-o" aria-hidden="true"></i>
                    <%end%> 
                  <%else%>
                    <%= link_to [:admin, u], method: :delete, class: "btn btn-primary m-1" do %>
                      <i class="fa fa-circle" aria-hidden="true"></i>
                    <%end%> 
                  <%end%>        
              </td>
            </tr> 
          <%end%>        
        <%end%>
      </tbody>
    </table>
    <%= will_paginate @users, :previous_label=> t("page.pre"), :next_label => t("page.next") %> 
</div>