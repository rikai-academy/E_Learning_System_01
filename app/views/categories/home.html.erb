<% provide(:title, t('categories.home.title') )%>
<div class="ed_slider_form_section">
  <!--Slider start-->
  <div class="ed_transprentbg ed_toppadder100 ed_bottompadder80">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <div class="ed_form_box">
            <div class="container">
              <div class="ed_search_form">
                <%= form_with( url: categories_path, method: :get, class: "form-inline md-form mr-auto mb-4") do |f| %>
                  <div class="col-md-10">
                    <%= f.text_field :name, class: "form-control mr-md-2"%>
                  </div>
                  <div class="col-md-2">
                    <%= f.submit t("admin.categories.search"), class: "btn ed_btn pull-right ed_orange"%>
                  </div>
                <%end%>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <div class="ed_heading_top ed_bottompadder50 ed_toppadder50">
            <h3>
              <%= t('categories.home.allcourses')%>
            </h3>
            <%= render "shared/flash_messages" %>
          </div>
        </div>
        <div class="ed_mostrecomeded_course_slider">         
          <% @categories.each do |category|%>
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
              <div class="ed_mostrecomeded_course">
                <div class="ed_item_img">
                   <% if category.image.attached? %>
                      <%= image_tag  category.image, class: "img-responsive"  %>
                    <%else%>
                      <%= image_tag "sec1_s5_big.jpg", class: "img-responsive" %>
                    <%end%>
                </div>
                <div class="ed_item_description ed_most_recomended_data">
                  <h4>
                    <%= link_to category.name, category_path(id: category.id), method: :get %>
                  </h4>
                  <div class="row">
                    <div class="ed_rating">
                      <div class="col-lg-6 col-md-6 col-sm-7 col-xs-7">
                        <div class="row">
                          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                          </div>
                          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                          </div>
                        </div>
                      </div>
                      <div class="col-lg-6 col-md-6 col-sm-5 col-xs-5">
                      </div>
                    </div>
                  </div>
                  <div class="course_detail">
                  </div>
                  <p>
                    <%= category.decription%>
                  </p>                 
                  <%= link_to category_path(id: category.id), method: :get do %>
                    <%= t('categories.home.getinvolved')%> <i class="fa fa-long-arrow-right"></i>
                  <%end%>
                </div>
              </div>
            </div>
            <%end%>
              <div class="row">
                <div class="col-md-6 col-md-offset-4">
                  <%= will_paginate @categories, :previous_label=> t("page.pre"), :next_label => t("page.next") %>
                </div>
              </div>
        </div>
      </div>
    </div>
  </div>