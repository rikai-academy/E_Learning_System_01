  <% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger"> 
        <%= t("errors.form_contain")%> <%= pluralize(@user.errors.count, t("errors.error")) %>.
    </div>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>