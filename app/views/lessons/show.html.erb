<div class="row ed_dashboard_wrapper">
  <div class="col-lg-8 col-lg-offset-2  container ed_dashboard_tab_info "> 
  <h3><%= t("lesson.show.lesson_name")%> <%= @lesson.name_lesson%></h3>
    <%= render "shared/flash_messages" %>
    <table class="table table-striped table-inverse table-responsive">
      <thead class="thead-inverse">
        <tr>
          <th><%= t("lesson.show.word")%></th>
          <th><%= t("lesson.show.pronounce")%></th>
          <th><%= t("lesson.show.mean")%></th>
          <th><%= t("lesson.show.actions")%></th>
        </tr>
        </thead>
        <tbody>
        <% @words.each do |w| %>
          <tr>
            <td scope="row"><%= w.word%></td>
            <td ><%= w.pronounce%></td>
            <td><%= w.mean%></td>
            <td>
              <%= link_to t("lesson.show.add_summary"), word_summary_path(id: w.id) %> |
              <%= link_to t("lesson.show.more"), "https://translate.google.com/?hl=vi&sl=auto&tl=vi&text=#{w.word}&op=translate", target: :_blank %>
            </td>
          </tr>          
        <%end%>
        </tbody>
    </table>
  </div>
</div>